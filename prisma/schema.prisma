generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid()) @map("_id")
  name     String
  birthday DateTime
  email    String   @unique
  password String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("users")
}

model List {
  id   String @id @default(uuid()) @map("_id")
  name String

  taks Task[]

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("lists")
}

model Task {
  id          String  @id @default(uuid()) @map("_id")
  title       String
  description String
  list_id     String
  status      Boolean @default(false)

  list List @relation(fields: [list_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("tasks")
}
